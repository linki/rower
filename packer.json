{
    "variables": {
    "account_file": "{{env `ACCOUNT_FILE`}}",
    "project_id": "{{env `PROJECT_ID`}}",
    "source_image": "{{env `SOURCE_IMAGE`}}",
    "zone": "{{env `ZONE`}}",
    "image_name": "{{env `IMAGE_NAME`}}",
    "image_description": "{{env `IMAGE_DESCRIPTION`}}",
    "machine_type": "{{env `MACHINE_TYPE`}}"
    },
    "builders": [{
        "type": "googlecompute",
        "account_file": "{{user `account_file`}}",
        "project_id": "{{user `project_id`}}",
        "source_image": "{{user `source_image`}}",
        "zone": "{{user `zone`}}",
        "disk_size": 10,
        "image_name": "{{user `image_name`}}",
        "image_description": "{{user `image_description`}}",
        "machine_type": "{{user `machine_type`}}",
        "ssh_username": "core"
    }],
    "provisioners": [{
        "type": "file",
        "source": "kubelet.service",
        "destination": "/tmp/kube-kubelet.service"
    },
    {
        "type": "shell",
        "inline": [
            "sudo mv /tmp/kube-kubelet.service /etc/systemd/system",
            "rm -f /tmp/kube-kubelet.service",
            "sudo systemctl enable etcd2",
            "sudo systemctl enable docker",
            "sudo systemctl enable kube-kubelet",
            "sudo systemctl start etcd2",
            "sudo systemctl start docker",
            "sudo systemctl start kube-kubelet"
        ]
    }]
}
